<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.0/css/all.css" integrity="sha384-OLYO0LymqQ+uHXELyx93kblK5YIS3B2ZfLGBmsJaUyor7CpMTBsahDHByqSuWW+q" crossorigin="anonymous">
        <link rel="shortcut icon" href="/assets/logo.png" type="image/x-icon">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="/css/lightgallery.css">
        <link rel="stylesheet" type="text/css" href="/css/images.css">
        <title>Image Gallery | <%= data[0].category %></title>
    </head>
<body>
    <nav class="nav">
        <div class="logo">
            Lucifer Images
        </div>
        <form action="/search" method="post">
        <input type="text" name="search" autocomplete="off" placeholder="Search Images" id="search" class="search">
        <button type="submit"><i class="fas fa-search"></i></button>
        </form>
        <div class="menus">
            <li><a href="/">HOME</a></li>
            <li><a href="/general">IMAGES</a></li>
            <li><a href="/titles">TITLES</a></li>
            <li><a href="/account"><i class="fas fa-user-alt"></i></a></li>
            <li><a href="/cart"><i class="fas fa-shopping-cart"></i></a></li>
        </div>
    </nav>
    <div class="content" id="lightgallery">
        <%for(let i in data){%>
        <a data-fancybox="gallery" href="/<%=data[i].category%>/<%=data[i].src%>">
                <div>
                    <img src="/<%=data[i].category%>/<%=data[i].src%>" alt="<%=data[i].name%>">
                    <h1><%= data[i].category %></h1>
                </div>
            </a>
        <%}%>
    </div>
    <div class="pagenation">
        <%for(let j=0;j<number;j++){ %>
            <li><a href="<%= data[0].category%>?page=<%= j+1 %>"><%= j+1 %></a></li>
        <%}%>
    </div>
    <!--Scripts-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-mousewheel/3.1.13/jquery.mousewheel.min.js"></script>
    <script src="/js/lightgallery-all.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/jq.js"></script>
</body>
</html>